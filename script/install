#!/bin/sh
set -e

current=`pwd`

echo "VIM settings"

files=("vimrc" "gvimrc")

for file in "${files[@]}"
do
  dest="$HOME/.$file"
  source="$current/rc/$file"

  echo "Creating symlink: $file"
  ln -fs $source $dest
done

tmp_directory="$current/tmp"
if [ ! -d "$tmp_directory" ]; then
  mkdir $tmp_directory
fi

if [ ! -d "bundle/Vundle.vim" ]; then
  echo "Installing Vundle..."
  git clone git@github.com:gmarik/Vundle.vim.git bundle/Vundle.vim
fi

echo "Done!"
